<body>
    <br>
    <div style="width:100%; display: flex; justify-content: center;">
        <h1>Mis mascotas</h1>
    </div>
    <br>
    <br>
    <section id="products">
        <div class="container">
            <div class="d-flex flex-row">
                <div class="text-muted m-2" id="res"></div>
                <div class="text-muted m-2" id="res">{{nroResultados}}</div>
                <div class="ml-auto mr-lg-4">
                    <div id="sorting" class="border rounded p-1 m-1"><span class="text-muted">Sort by</span> <select
                            name="sort" id="sort">
                        <option value="edad"><b>Edad</b></option>
                        <option value="raza"><b>Raza</b></option>
                        <option value="peso"><b>Peso</b></option>
                    </select></div>
                </div>
            </div>
            <div class="row">
                {{#each mascotas}}
                    <div class="col-lg-4 col-md-6 col-sm-10 offset-md-0 offset-sm-1">
                        <div class="card"><img class="card-img-top" src="{{this.fotos.0}}">
                            <div class="card-body">
                                <h5><b>{{this.apodo}}</b></h5>
                                <h6><b>Fecha de nacimiento: {{this.fechaDeNacimiento}}</b></h6>
                                <h6><b>{{this.tipoDeMascota}}{{#if this.esHembra}} Hembra {{else}} Macho {{/if}}</b></h6>

                                <button class="btn w-100 rounded my-2"><i class="fas fa-edit"></i>Editar</button>
                                <button class="btn w-100 rounded my-2"><i class="fas fa-gift"></i>Dar en adopcion</button>
                                <button class="btn w-100 rounded my-2"><i class="fas fa-trash"></i>Borrar</button>

                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </section>
