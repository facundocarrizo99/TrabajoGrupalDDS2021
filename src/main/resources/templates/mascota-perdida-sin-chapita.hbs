<body>
    <div class="main-wrapper">
        <div class = "form-col-left">
            <h2>Encontraste una Mascota!</h2>
            <form action="/mascota-perdida-sin-chapita" method="post" class="register-form">
                <h3>Datos de la mascota</h3>
                <div class="form-item-list">
                    <!-- item -->
                    <div class="form-item">
                        <label for="firstname">Estado</label>
                        <div class="form-group">
                            <span><i class="fas fa-user"></i></span>
                            <input type="text" class="form-control" id="estado" name="estado" placeholder="estado">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="imagen">Cargar Imagen</label>
                        <div class="form-group">
                            <span><i class="fas fa-images"></i></span>
                            <input type="file" class="form-control" id="cargar-imagen" placeholder="cargar imagen">

                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="email">Latitud</label>
                        <div class="form-group">
                            <span><i class="fas fa-compass"></i></span>
                            <input type="number" class="form-control" name="lat" id="lat" placeholder="Latitud">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="email">Longitud</label>
                        <div class="form-group">
                            <span><i class="fas fa-compass"></i></span>
                            <input type="number" class="form-control" name="long" id="long" placeholder="Longitud">
                        </div>
                    </div>
                    <!-- end of item -->
                </div>
                <h3>Datos Personales</h3>
                <div class="form-item-list">
                    <!-- item -->
                    <div class="form-item">
                        <label for="firstname">Nombre</label>
                        <div class="form-group">
                            <span><i class="fas fa-user"></i></span>
                            <input type="text" class="form-control" id="firstname" name="nombre" placeholder="nombre">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="lastname">Apellido</label>
                        <div class="form-group">
                            <span><i class="fas fa-user"></i></span>
                            <input type="text" class="form-control" id="lastname" name="apellido"
                                   placeholder="apellido">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="confirm-password">Fecha de Nacimiento</label>
                        <div class="form-group">
                            <span><i class="fas fa-calendar-day"></i></span>
                            <input type="date" class="form-control" id="fechaNacimiento" name="fechaDeNacimiento"
                                   placeholder="confirmar contraseÃ±a">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="email">Numero de documento</label>
                        <div class="form-group">
                            <span><i class="fas fa-id-card"></i></span>
                            <input type="text" class="form-control" name="nroDoc" id="nroDoc"
                                   placeholder="numero de documento">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="email">Calle</label>
                        <div class="form-group">
                            <span><i class="fas fa-address-card"></i></span>
                            <input type="text" class="form-control" name="calle" id="calle" placeholder="calle">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="email">Altura</label>
                        <div class="form-group">
                            <span><i class="fas fa-address-card"></i></span>
                            <input type="text" class="form-control" name="altura" id="altura" placeholder="altura">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="email">Codigo postal</label>
                        <div class="form-group">
                            <span><i class="fas fa-address-card"></i></span>
                            <input type="text" class="form-control" name="codigoPostal" id="codigopostal"
                                   placeholder="codigo postal">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="email">email adddress</label>
                        <div class="form-group">
                            <span><i class="fas fa-envelope"></i></span>
                            <input type="text" class="form-control" id="email" placeholder="email">
                        </div>
                    </div>
                    <!-- end of item -->
                    <!-- item -->
                    <div class="form-item">
                        <label for="phonenumber">phone number</label>
                        <div class="form-group">
                            <span><i class="fas fa-phone-alt"></i></span>
                            <input type="text" class="form-control" id="phonenumber" placeholder="XX XXXX-XXXX">
                        </div>
                    </div>
                    <!-- end of item -->
                </div>



                <!-- Chechboxes -->
                <div class="form-item-checkbox">
                    <label for="formas-contacto">Formas de contacto</label>
                    <div class="form-group-checkbox">

                        <span><i class="fas fa-address-book"></i></span> <label>SMS</label>
                        <input name="sms" type="checkbox" class="form-control-chechbox">

                        <span><i class="fas fa-address-book"></i></span> <label>WhatsApp</label>
                        <input name="whatsapp" type="checkbox" class="form-control-chechbox">

                        <span><i class="fas fa-address-book"></i></span> <label>Email</label>
                        <input name="mail" type="checkbox" class="form-control-chechbox">

                    </div>
                </div>
                <!-- end of Chechboxes -->

                <span class="submission-status">
                    <!-- text here -->
                </span>

                <span class="password-status">
                    <!-- text here -->
                </span>

                <button type="submit" id="submit-btn">
                    rescatar mascota!
                    <i class="fas fa-long-arrow-alt-right"></i>
                </button>

            </form>
