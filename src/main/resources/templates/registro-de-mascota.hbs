<body>
<div class="main-wrapper">
    <div class="form-col-left">
        <h2>Registr치 tu mascota!</h2>
        <form action="/registro-de-mascota" method="post" class="register-form">
            <div class="form-item-list">

                <!-- item -->
                <div class="form-item">
                    <label for="firstname">Nombre</label>
                    <div class="form-group">
                        <span><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="nombre">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="lastname">Apodo</label>
                    <div class="form-group">
                        <span><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" id="apodo" name="apodo"
                               placeholder="apodo">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="fechaNacimiento">Fecha de Nacimiento</label>
                    <div class="form-group">
                        <span><i class="fas fa-calendar-day"></i></span>
                        <input type="date" class="form-control" id="fechaDeNacimiento" name="fechaDeNacimiento"
                               placeholder="confirmar contrase침a">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="sexo">Sexo</label>
                    <div class="form-group">
                        <span><i class="fas fa-venus-mars"></i></span>
                        <input type="text" class="form-control" name="sexo" id="sexo" placeholder="Sexo"
                               list="sexoList">
                        <datalist id="sexoList">
                            <option value="Hembra"/>
                            <option value="Macho"/>
                        </datalist>
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="peso">Peso en Kg</label>
                    <div class="form-group">
                        <span><i class="fas fa-weight-hanging"></i></span>
                        <input type="text" class="form-control" name="peso" id="altura" placeholder="peso en Kg">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="tipoMascota">Tipo de mascota</label>
                    <div class="form-group">
                        <span><i class="fas fa-paw"></i></span>
                        <input type="text" class="form-control" name="tipoMascota" id="tipoMascota"
                               placeholder="tipo de mascota" list="tipoMascotaList">
                        <datalist id="tipoMascotaList">
                            <option value="Perro"/>
                            <option value="Gato"/>
                        </datalist>
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="colorPrincipal">Color principal</label>
                    <div class="form-group">
                        <span><i class="fas fa-tint"></i></span>
                        <input type="text" class="form-control" name="colorPrincipal" id="colorPrincipal"
                               placeholder="color principal" list="colores">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="colorSecundario">Color secundario</label>
                    <div class="form-group">
                        <span><i class="fas fa-tint"></i></span>
                        <input type="text" class="form-control" name="colorSecundario" id="colorSecundario"
                               placeholder="color secundario" list="colores">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="castrado">Esta castrado</label>
                    <div class="form-group">
                        <span><i class="fas fa-paw"></i></span>
                        <input type="text" class="form-control" id="castrado" placeholder="castrado" list="sino">
                        <datalist id="sino">
                            <option value="Si"/>
                            <option value="No"/>
                        </datalist>
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="imagen">Cargar Imagen</label>
                    <div class="form-group">
                        <span><i class="fas fa-images"></i></span>
                        <input type="file" class="form-control" id="cargar-imagen" placeholder="cargar imagen">

                    </div>
                </div>
                <!-- end of item -->
            </div>

            <span class="submission-status">
                        <!-- text here -->
                    </span>

            <button type="submit" id="submit-btn">
                registrar mascota
                <i class="fas fa-long-arrow-alt-right"></i>
            </button>

        </form>
