<body>
<div class="main-wrapper">
    <div class = "form-col-left">
        <h2>Crear Voluntario</h2>
        <form action="/crear-voluntario" method="post" class="register-form">
            <div class = "form-item-list">

                <!-- item -->
                <div class="form-item">
                    <label for="firstname">Nombre</label>
                    <div class="form-group">
                        <span><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" id="firstname" name="nombre" placeholder="nombre">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="lastname">Apellido</label>
                    <div class="form-group">
                        <span><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" id="lastname" name="apellido"
                               placeholder="apellido">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="confirm-password">Fecha de Nacimiento</label>
                    <div class="form-group">
                        <span><i class="fas fa-calendar-day"></i></span>
                        <input type="date" class="form-control" id="fechaNacimiento" name="fechaDeNacimiento"
                               placeholder="confirmar contraseña">
                    </div>
                </div>
                <!-- end of item -->

                <!-- item -->
                <div class="form-item">
                    <label for="password">Usuario</label>
                    <div class="form-group">
                        <span><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" name="usuario" id="username"
                               placeholder="usuario">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="password">password</label>
                    <div class="form-group">
                        <span><i class="fas fa-lock"></i></span>
                        <input type="password" class="form-control" name="contrasenia" id="password"
                               placeholder="contraseña">
                    </div>
                </div>
                <!-- end of item -->
                <!-- item -->
                <div class="form-item">
                    <label for="confirm-password">confirm password</label>
                    <div class="form-group">
                        <span><i class="fas fa-lock"></i></span>
                        <input type="password" class="form-control" id="confirm-password"
                               placeholder="confirmar contraseña">
                    </div>
                </div>
                <!-- end of item -->
            </div>

            <span class="submission-status">
                    <!-- text here -->
                </span>

            <button type="submit" id="submit-btn">
                registrar voluntario
                <i class="fas fa-long-arrow-alt-right"></i>
